<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Score">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addscoreButton"
        android:text="click"
        android:onClick="clicked"
        android:layout_below="@+id/sps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="score: 0"
        android:id="@+id/Score"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Score"
        android:text="score per second: 0"
        android:id="@+id/sps"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Shop"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="worker 1: -100 Score + 5 sps"
        android:id="@+id/addsps1"
        android:onClick="addsps1"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/addscoreButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="worker 2: -200 Score + 10 sps"
        android:id="@+id/addsps2"
        android:onClick="addsps2"
        android:layout_above="@+id/addsps3"
        android:layout_toEndOf="@+id/addscoreButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="worker 3: -300 Score + 15 sps"
        android:id="@+id/addsps3"
        android:onClick="addsps3"
        android:layout_below="@+id/addsps1"
        android:layout_alignStart="@+id/addsps1"
        android:layout_marginTop="38dp"
        android:layout_toStartOf="@+id/addscoreButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="worker 4: -500 Score + 25 sps"
        android:id="@+id/addsps4"
        android:onClick="addsps4"
        android:layout_alignTop="@+id/addsps3"
        android:layout_alignStart="@+id/addsps2" />

</RelativeLayout>
